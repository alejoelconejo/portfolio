---
import { LanguageSelector } from 'astro-i18next/components'
import { t } from 'i18next'
import SocialMedia from './SocialMedia.astro'
---

<section
  class='flex flex-col-reverse md:flex-row md:items-start justify-between gap-8 md:gap-14 items-center'
>
  <div>
    <h1 class='text-5xl font-black mb-2'>Alejo Hernán Janin</h1>
    <p class='text-2xl font-medium text-secondary'>Frontend Web Developer</p>
    <p class='text-gray-200 mt-6'>
      {t('hero.description')}
    </p>
    <p class='text-gray-200 mt-2'>
      {t('hero.degree')}
    </p>
    <div
      class='flex items-center mt-10 md:gap-16 gap-4 md:justify-start justify-between'
    >
      <SocialMedia />
      <a
        href='ALEJO-HERNAN-JANIN-CV.pdf'
        target='_blank'
        class='bg-primary hover:bg-primary-hover py-2 px-4 rounded-md shrink-0 transition-colors duration-75'
        >{t('hero.cv-button')}</a
      >
    </div>
  </div>
  <img
    src='images/foto.webp'
    class='h-60 w-60 object-cover rounded-full'
    alt='Alejo Hernán Janin'
  />
  <div class='ml-auto sm:hidden block sm:mt-0 sm:mb-0 -mt-6 mb-4'>
    <LanguageSelector
      showFlag={true}
      class='sm:bg-darkGray/75 bg-background text-sm cursor-pointer'
    />
  </div>
</section>
