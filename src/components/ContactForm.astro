---
import { t } from 'i18next'
---

<section id='contact'>
  <h2 class='text-4xl font-bold mb-8'>{t('contact.title')}</h2>
  <form
    class='flex flex-col gap-8 w-full'
    action='https://formspree.io/f/xoqbbnya'
    method='POST'
  >
    <label class='mb-1'
      >{t('contact.name')}<input
        type='text'
        name='name'
        class='w-full mt-2 rounded-sm text-black p-2'
        required
      />
    </label>
    <label class='mb-1'
      >{t('contact.email')}<input
        type='email'
        name='email'
        class='w-full mt-2 rounded-sm text-black p-2'
        required
      />
    </label>
    <label class='mb-1'
      >{t('contact.msg')}<textarea
        name='message'
        rows='5'
        class='w-full mt-2 rounded-sm text-black p-2'
        required></textarea>
    </label>
    <button
      class='bg-primary hover:bg-primary-hover transition-colors duration-75 py-2 px-4 rounded-md'
      >{t('contact.send')}</button
    >
  </form>
</section>
