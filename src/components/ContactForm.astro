<section id='contact'>
  <h2 class='text-4xl font-bold mb-8'>Contacto</h2>
  <form
    class='flex flex-col gap-8 w-full'
    action='https://formspree.io/f/xoqbbnya'
    method='POST'
  >
    <label class='mb-1'
      >Nombre<input
        type='text'
        name='name'
        class='w-full mt-2 rounded-sm text-black p-2'
      />
    </label>
    <label class='mb-1'
      >E-mail<input
        type='email'
        name='email'
        class='w-full mt-2 rounded-sm text-black p-2'
      />
    </label>
    <label class='mb-1'
      >Mensaje<textarea
        name='message'
        class='w-full mt-2 rounded-sm text-black p-2'></textarea>
    </label>
    <button class='bg-[#f432cf] py-2 px-4 rounded-md'>Enviar</button>
  </form>
</section>
