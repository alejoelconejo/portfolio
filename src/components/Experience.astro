const experience = [
  {
    date: 'Oct 2021 - actualidad',
    title: 'Bibliotecario',
    employer: 'Biblioteca Nacional Mariano Moreno',
    body: 'Desarrollo, soporte y capacitación para el software Aleph.',
  },
  {
    date: 'Mar 2021 - actualidad',
    title: 'Archivista',
    employer:
      'Archivo del Instituto de Investigaciones en Arte y Cultura (UNTREF)',
    body: 'Mantenimiento y desarrollo de mejoras del software para descripción archivística AtoM (HTML, CSS, JS, PHP). Identificación, clasificación, indización y catalogación de documentos de archivo.',
  },
  {
    date: 'Sep 2020 - actualidad',
    title: 'Bibliotecario',
    employer: 'Ministerio de Cultura (Argentina)',
    body: 'Asesoría en implementación del catálogo colectivo para bibliotecas de museos e institutos nacionales. Planificación, migración de bases de datos e implementación del software Koha.',
